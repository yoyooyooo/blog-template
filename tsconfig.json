{
  "compilerOptions": {
    "target": "es2019",
    "jsx": "react",
    "sourceMap": true,
    "module": "esnext",
    "allowJs": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["./typings", "typings.d.ts"]
}
